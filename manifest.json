{
    "manifest_version":2,
    "name": "Bookmark Extension",
    "description": "An extension that keeps track of where you are on a page.",
    "version": "1",
    "browser_action": {
        "default_title": "Where was I?",
        "default_popup":"popup.html",
        "default_icon": "icon.png"
    },
    "permissions": ["activeTab","tabs"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["main.js"],
        "run_at": "document_idle"
    }],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}